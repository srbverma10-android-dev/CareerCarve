<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourabhverma.careercarveandroidapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CareerCarveAndroidApplication"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".add_schedule.presentation.activity.AddScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".dashboard.presentation.activity.DashBoardActivity"
            android:exported="false" />
        <activity
            android:name=".entry_point.presentation.activity.EntryPointActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>